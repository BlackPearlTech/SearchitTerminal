#   Update Function

function update(){
    cd ~
    wget https://raw.githubusercontent.com/searchitofficial/SearchitTerminal/master/docs/version
    if [ -f ~/version.dat ]
    then {
        AvailableVersion=$(cat version.dat)
        if [ "$AvailableVersion" == "$version" ]
        then {
              echo "You Are Up-To-Date"
              }
        else {
               echo "Version $AvailableVersion Is Available. Do You Want To Update?(Y/y = yes)"
               read decision;
               if [ "$decision" == "Y" ] || [ "$decision" == "y" ]
               then {
                 wget https://github.com/searchitofficial/SearchitTerminal/archive/master.zip
                 if [ -f ~/master.zip ]
                 then {
                      sudo rm /usr/bin/searchit /usr/bin/googleit /usr/bin/duckit
                      sudo rm -r ~/.searchit
                      unzip master.zip
                      cd SearchitTerminal-master
                      ./installer.sh
                      rm ~/master.zip
                      rm -r ~/SearchitTerminal-master
                      echo "Update Complete !!"
                    }
                 else {
                    echo "ERROR: Unable to download updates. Check your internet connection. Or Try again later"
                  }
                 fi
               }
               else {
                  echo " Maybe Later. -_- "
                }
               fi
              }
        fi
        rm ~/version.dat
        }
    else
      {
        echo "ERROR: Unable to check update. Check your internet connection. Or Try again later
              "
      }
    fi
  }
