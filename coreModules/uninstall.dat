    read decision;
    if [ "$decision" == "Y" ] || [ "$decision" == "y" ]
    then {
        cd /usr/bin
        sudo rm duckit googleit searchit
        sudo rm /usr/share/applications/SearchitTerminal.desktop
        cd ~
        sudo rm -r .searchit
